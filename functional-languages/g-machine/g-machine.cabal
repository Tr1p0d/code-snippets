    build-depends:      base >=4.9 && <4.10
                        , text ==1.2.*
                        , lens ==4.14.*
                        , containers ==0.5.*
                        , parsec ==3.1.*
                        , pretty ==1.1.*
                        , optparse-applicative ==0.13.*

    hs-source-dirs:      src
    default-language:    Haskell2010
    ghc-options:
        -Wall
